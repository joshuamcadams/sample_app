<% if signed_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="col-md-8">
			<h3>Growl Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center jumbotron" id="home-jumbo">

		<h1>Welcome to Trollster</h1>
		<p>A great way to share your lonely solitary life with other trolls!</p>

		<%= link_to "Start Growling", signup_path, class: "btn btn-lg btn-primary" %>

	</div>

<%= link_to image_tag("rails.png", alt: "rails"), 'http://rubyonrails.org' %>

<% end %>



